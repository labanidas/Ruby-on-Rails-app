

<h1>Friends List</h1>

<div id="friends">
<table class='table table-striped table-bordered table-hover'>
<thead class='table-dark'>
    <tr>
      <th scope="col"><strong>First name</strong></th>
      <th scope="col"><strong>Last name</strong></th>
      <th scope="col"><strong>Email</strong></th>
      <th scope="col"><strong>Phone</strong></th>
      <th scope="col"><strong>User ID</strong></th>
      <th scope="col"><strong>Show</strong></th>
      <th scope="col"><strong>Edit</strong></th>
      <th scope="col"><strong>Destroy</strong></th>
     
    </tr>
  </thead>
  <tbody>
  <% @friends.each do |friend| %>
    <% if friend.user == current_user %>
   <tr>
    <%= render friend %>
    <p>
    <td>
      <p> <%=friend.user_id %>
      </td>
    <td>
      <%= link_to "Show", friend %>
      </td>
      
      <td>
      <%= link_to "Edit", edit_friend_path(friend)%>
      </td>
      <td>
      <%= link_to "Destroy", friend, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
      </td>

    </p>
   </tr>
   <% end %>
  <% end %>
  </tbody>
  </table>
</div>

<%= link_to "New friend", new_friend_path, class:"btn btn-secondary" %>
