<div
        class="modal fade"
        id="delete<%=id%>"
        data-bs-backdrop="static"
        data-bs-keyboard="false"
        tabindex="-1"
        aria-labelledby="delete<%=id%>Label"
        aria-hidden="true"
        >
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="delete<%=id%>Label">
                <%= heading %>
              </h1>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="modal"
                aria-label="Close"
              ></button>
            </div>
            <div class="modal-body">
              <!-- modal body-->
                <%= body %>
            </div>
            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-secondary btn-sm"
                data-bs-dismiss="modal"
              >
                Cancel
              </button>
              <!-- delete --> 
            
              <% if can_delete %>
                <%= button_to  "Confirm", route , class: "btn
                      btn-danger btn-sm", data: { turbo_method: :delete, } %>
              <% end %>

            </div>
          </div>
        </div>
      </div>